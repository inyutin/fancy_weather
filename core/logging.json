{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "style": "{",
      "format": "{asctime} {name} {levelname:1.1} - {message}"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "standard"
    },
    "file": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "filename": "current-core.log",
      "formatter": "standard",
      "when": "midnight",
      "backupCount": 2
    }
  },
  "loggers": {
    "": {
      "level": "DEBUG",
      "handlers": [
        "console",
        "file"
      ]
    }
  }
}
